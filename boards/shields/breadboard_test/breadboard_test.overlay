/ {
    chosen {
        zmk,kscan = &kscan0;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";
        diode-direction = "col2row"; // 常用模式：列到行

        row-gpios
            = <&gpio0 6  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row 0
            , <&gpio0 8  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row 1
            , <&gpio0 17 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row 2
            ;

        col-gpios
            = <&gpio0 20 GPIO_ACTIVE_HIGH> // Col 0
            , <&gpio0 22 GPIO_ACTIVE_HIGH> // Col 1
            , <&gpio0 24 GPIO_ACTIVE_HIGH> // Col 2
            ;
    };
};