/ {
    chosen {
        zmk,kscan = &kscan0;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-direct";
        label = "KSCAN";
        input-gpios
            = <&gpio0 6 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>   // 索引 0: Pin 6 (空格)
            , <&gpio0 8 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;  // 索引 1: Pin 8 (清除)
    };
};