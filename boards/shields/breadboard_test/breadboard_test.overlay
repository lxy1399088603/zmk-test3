&adc {
    status = "okay";
};

/ {
    chosen {
        zmk,kscan = &kscan0;
    };

    trackstick_listener {
        compatible = "zmk,input-listener";
        device = <&joystick>;
    };

    joystick: joystick {
        compatible = "zmk,input-behavior-sensor-joystick";
        #sensor-binding-cells = <0>;
        
        io-channels = <&adc 5>, <&adc 0>; 
        
        bindings = <&ib_move_x>, <&ib_move_y>;
        
        deadzone = <100>;       // 死区：防止静止时鼠标漂移
        sensitivity = <100>;    // 灵敏度：数值越大移速越快
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";
        diode-direction = "col2row"; // 常用模式：列到行

        row-gpios
            = <&gpio0 6  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row 0
            , <&gpio0 8  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row 1
            , <&gpio0 17 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row 2
            , <&gpio0 20 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row 3
            , <&gpio0 22 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row 4
            ;

        col-gpios
            = <&gpio0 24 GPIO_ACTIVE_HIGH> // Col 0
            , <&gpio1 00 GPIO_ACTIVE_HIGH> // Col 1
            , <&gpio0 11 GPIO_ACTIVE_HIGH> // Col 2
            , <&gpio1 04 GPIO_ACTIVE_HIGH> // Col 3
            , <&gpio1 06 GPIO_ACTIVE_HIGH> // Col 4
            , <&gpio0 31 GPIO_ACTIVE_HIGH> // Col 5
            ;
    };
};